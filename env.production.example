# ===========================================
# EMBY ADMIN DASHBOARD - PRODUCTION CONFIG
# ===========================================

# Base de datos PostgreSQL
DATABASE_URL="postgresql://username:password@your-server:5432/emby_admin?schema=public"

# Autenticación JWT (¡CAMBIAR EN PRODUCCIÓN!)
NEXTAUTH_SECRET="your-super-secure-secret-key-change-this"
JWT_SECRET="your-jwt-secret-key-change-this"

# Configuración del servidor
NODE_ENV="production"
PORT="3000"
NEXTAUTH_URL="https://your-domain.com"

# Optimizaciones de rendimiento
NEXT_TELEMETRY_DISABLED=1
NODE_OPTIONS="--max-old-space-size=4096"

# ===========================================
# INTEGRACIONES FUTURAS (OPCIONAL)
# ===========================================

# Emby API (para integración con servidores Emby)
# EMBY_API_KEY="your-emby-api-key"
# EMBY_SERVER_URL="https://your-emby-server.com"

# Monitoreo y logs (Sentry)
# SENTRY_DSN="https://your-sentry-dsn"

# Email/SMTP (para notificaciones)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Redis (para cache y sesiones)
# REDIS_URL="redis://localhost:6379"

# ===========================================
# SEGURIDAD ADICIONAL
# ===========================================

# Rate limiting
# RATE_LIMIT_MAX="100"
# RATE_LIMIT_WINDOW="900000"

# CORS
# ALLOWED_ORIGINS="https://your-domain.com,https://admin.your-domain.com"
